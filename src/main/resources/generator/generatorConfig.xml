<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- 
	基于Maven 自动生成 
	运行命令 ： mvn mybatis-generator:generate
 -->
<generatorConfiguration>
	
	<!-- 引入资源 -->
	<properties resource="generatorConfig.properties" />
	
	<!-- 数据库驱动位置 -->
	<!-- 	<classPathEntry location="${driverPath}" /> -->

	<context id="Oracle" targetRuntime="MyBatis3" defaultModelType="flat">
		<!-- 生成的Java文件的编码 -->
	    <property name="javaFileEncoding" value="UTF-8"/>
	    <!-- 格式化java代码 -->
	    <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
	    <!-- 格式化XML代码 -->
	    <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>
	    
	    <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
	
		<!-- <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
			<property name="mappers" value="tk.mybatis.springboot.util.MyMapper" />
		</plugin> -->
	
		<commentGenerator>
			<!-- 关闭注释 -->
			<property name="suppressAllComments" value="false" />
			<!-- 是否生成注释代时间戳-->  
			<property name="suppressDate" value="true" /> 
		</commentGenerator>
		
		<!-- 数据源配置 -->
		<jdbcConnection driverClass="${driver}" connectionURL="${url}" userId="${username}" password="${password}" >
			<!-- 针对oracle数据库 -->
			<property name="remarksReporting" value="true"></property>
		</jdbcConnection>

		<!-- 类型转换 -->  
		<javaTypeResolver type="org.mybatis.generator.internal.types.JavaTypeResolverDefaultImpl">
			<!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） --> 
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 实体对象生成目录 -->
		<javaModelGenerator targetPackage="${basePackage}.entity" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		
		<!-- mapper XML 文件生成 -->
		<sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- mapper 接口文件生成 -->
		<javaClientGenerator targetPackage="${basePackage}.mapper" targetProject="src/main/java" type="XMLMAPPER">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		
		
		<!-- 配置表信息
			schema即为数据库名 
			tableName为对应的数据库表 
			domainObjectName是要生成的实体类 
			enable*ByExample是否生成 example类   
			useActualColumnNames 驼峰
		-->

		<!--学期表-->
		<table schema="" tableName="LY_XTGL_BM" domainObjectName="Department"
			   enableCountByExample="false" enableUpdateByExample="false"
			   enableDeleteByExample="false" enableSelectByExample="false"
			   selectByExampleQueryId="false">
			<property name="useActualColumnNames" value="false" />
			<columnOverride column="BMBH" property="id"/>
			<columnOverride column="BMMC" property="name"/>
			<columnOverride column="FBMBH" property="parentId"/>
			<columnOverride column="BMCJBH" property="hierarchy"/>
			<columnOverride column="BMDLXBH" property="type1"/>
			<columnOverride column="BMXLXBH" property="type2"/>
			<columnOverride column="PXH" property="sortNum"/>
			<columnOverride column="ZT" property="status"/>
			<columnOverride column="CJR" property="createUserId"/>
			<columnOverride column="CJSJ" property="createTime"/>
			<columnOverride column="GXR" property="updateUserId"/>
			<columnOverride column="GXSJ" property="updateTime"/>
			<columnOverride column="SCBS" property="deleteFlag"/>
		</table>
	</context>
</generatorConfiguration>